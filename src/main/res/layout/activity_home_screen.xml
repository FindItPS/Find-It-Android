<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.painlessshopping.mohamed.findit.HomeScreen">


    <Button
        android:text="Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_button"
        android:layout_above="@+id/maps_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="searchButtonClicked" />

    <Button
        android:text="Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maps_button"
        android:onClick="mapsButtonClicked"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="My Cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cart_button"
        android:layout_below="@+id/maps_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
        
    <Button
        android:text="Featured Stores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/featured_button"
        android:onClick="featuredButtonClicked"
        android:layout_below="@+id/cart_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
        
</RelativeLayout>
